@model WebGestionClientes.Models.ViewModels.ClienteVM
@{
    ViewData["Title"] = "ClienteDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


@if(Model.Cliente.ClienteId == 0)
{
    <h1>Crear Cliente</h1>
}

else
{
    <h1>Editar Cliente</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="ClienteDetalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Cliente.ClienteId"/>

            <div class="mb-2">
                <label class="form-label" asp-for="Cliente.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Cliente.Nombre" type="text" required/>

            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Cliente.Apellido">Apellido</label>
                <input class="form-control form-control-sm" asp-for="Cliente.Apellido" type="text" required/>

            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Cliente.Saldo">Saldo</label>
                <input class="form-control form-control-sm" asp-for="Cliente.Saldo" type="text" value="@Model.Cliente.Saldo.ToString("N2")" required/>
            </div>

            <div class="mb-2">
                @if(Model.Cliente.ClienteId == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Guardar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>


            </div>
            
        </form>
    </div>
</div>